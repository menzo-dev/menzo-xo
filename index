    <script>
        // --- THEME & UI ---
        function toggleTheme() {
            const body = document.body;
            const icon = document.getElementById('themeIcon');
            if (body.getAttribute('data-theme') === 'light') {
                body.setAttribute('data-theme', 'dark');
                icon.innerText = '‚òÄÔ∏è';
            } else {
                body.setAttribute('data-theme', 'light');
                icon.innerText = 'üåô';
            }
        }

        function toggleSidebar() {
            document.querySelector('.hamburger').classList.toggle('active');
            document.getElementById('sidebar').classList.toggle('active');
        }

        function setLevel(level) {
            currentLevel = level;
            document.querySelectorAll('.level-btn').forEach(btn => btn.classList.remove('active'));
            event.target.classList.add('active');
            addLog(`Level changed to: ${level.toUpperCase()}`);
            resetGame();
            toggleSidebar(); // Close sidebar on selection
        }

        function addLog(msg, type = '') {
            const log = document.getElementById('gameLog');
            const entry = document.createElement('div');
            entry.className = `log-entry ${type}`;
            entry.innerText = `> ${msg}`;
            log.prepend(entry);
        }

        // --- NEURAL NETWORK VISUALIZATION ---
        const canvas = document.getElementById('neural-canvas');
        const ctx = canvas.getContext('2d');
        let nodes = [];
        let neuralActive = false;

        function resizeNeural() {
            canvas.width = canvas.parentElement.offsetWidth;
            canvas.height = canvas.parentElement.offsetHeight;
        }
        window.addEventListener('resize', resizeNeural);
        resizeNeural();

        class Node {
            constructor() {
                this.x = Math.random() * canvas.width;
                this.y = Math.random() * canvas.height;
                this.vx = (Math.random() - 0.5) * 0.5;
                this.vy = (Math.random() - 0.5) * 0.5;
                this.size = Math.random() * 2 + 1;
                this.color = getComputedStyle(document.body).getPropertyValue('--accent-color').trim();
            }
            update() {
                this.x += this.vx * (neuralActive ? 5 : 1); // Speed up when thinking
                this.y += this.vy * (neuralActive ? 5 : 1);
                if (this.x < 0 || this.x > canvas.width) this.vx *= -1;
                if (this.y < 0 || this.y > canvas.height) this.vy *= -1;
            }
            draw() {
                ctx.fillStyle = this.color;
                ctx.beginPath();
                ctx.arc(this.x, this.y, this.size, 0, Math.PI * 2);
                ctx.fill();
            }
        }

        for (let i = 0; i < 30; i++) nodes.push(new Node());

        function animateNeural() {
            ctx.clearRect(0, 0, canvas.width, canvas.height);
            const color = getComputedStyle(document.body).getPropertyValue(neuralActive ? '--secondary-color' : '--accent-color').trim();
            ctx.strokeStyle = color;
            ctx.lineWidth = 0.5;
            ctx.globalAlpha = neuralActive ? 0.8 : 0.3;

            for (let i = 0; i < nodes.length; i++) {
                nodes[i].update();
                nodes[i].draw();
                for (let j = i + 1; j < nodes.length; j++) {
                    const dx = nodes[i].x - nodes[j].x;
                    const dy = nodes[i].y - nodes[j].y;
                    const dist = Math.sqrt(dx * dx + dy * dy);
                    if (dist < (neuralActive ? 60 : 40)) {
                        ctx.beginPath();
                        ctx.moveTo(nodes[i].x, nodes[i].y);
                        ctx.lineTo(nodes[j].x, nodes[j].y);
                        ctx.stroke();
                    }
                }
            }
            requestAnimationFrame(animateNeural);
        }
        animateNeural();

        // --- GAME ENGINE ---
        const boardEl = document.getElementById('board');
        const mainStatus = document.getElementById('mainStatus');
        const subStatus = document.getElementById('subStatus');
        const winPath = document.getElementById('winPath');
        const startOverlay = document.getElementById('startOverlay');

        let board = Array(9).fill(null);
        let gameActive = false;
        let currentPlayer = 'X';
        let currentLevel = 'hard';
        const wins = [[0,1,2],[3,4,5],[6,7,8],[0,3,6],[1,4,7],[2,5,8],[0,4,8],[2,4,6]];

        function initBoard() {
            boardEl.innerHTML = '<svg class="winning-svg"><path id="winPath" class="winning-path" d="" /></svg>';
            for (let i = 0; i < 9; i++) {
                const cell = document.createElement('div');
                cell.classList.add('cell');
                cell.dataset.index = i;
                cell.addEventListener('click', () => handleCellClick(i));
                boardEl.appendChild(cell);
            }
        }
        initBoard();

        function startGame() {
            startOverlay.classList.add('hidden');
            resetGame();
            addLog("Game Session Started");
        }

        function handleCellClick(index) {
            if (board[index] || !gameActive || currentPlayer !== 'X') return;
            makeMove(index, 'X');
            removeHint();
            if (gameActive) {
                currentPlayer = 'O';
                mainStatus.innerText = "AI THINKING";
                subStatus.innerText = "Calculating probabilities...";
                neuralActive = true; // Activate Neural Viz
                setTimeout(makeComputerMove, 800);
            }
        }

        function makeMove(index, player) {
            board[index] = player;
            const cell = boardEl.children[index + 1];
            cell.innerText = player;
            cell.classList.add(player.toLowerCase());
            
            if (checkWin(board, player)) {
                endGame(player);
            } else if (!board.includes(null)) {
                endGame('draw');
            }
        }

        function makeComputerMove() {
            if (!gameActive) return;
            neuralActive = false; // Deactivate Neural Viz

            let moveIndex;
            if (currentLevel === 'easy') moveIndex = getRandomMove();
            else if (currentLevel === 'medium') moveIndex = getBestMove(3);
            else if (currentLevel === 'hard') moveIndex = getBestMove(9);
            else if (currentLevel === 'neural') moveIndex = getNeuralMove();

            makeMove(moveIndex, 'O');
            if (gameActive) {
                currentPlayer = 'X';
                mainStatus.innerText = "YOUR TURN";
                subStatus.innerText = "Analyze the board";
            }
        }

        // --- HYBRID AI ALGORITHMS ---
        function getRandomMove() {
            const available = board.map((v, i) => v === null ? i : null).filter(v => v !== null);
            return available[Math.floor(Math.random() * available.length)];
        }

        function getBestMove(depth) {
            let bestScore = -Infinity;
            let move = -1;
            let alpha = -Infinity;
            let beta = Infinity;
            for (let i = 0; i < 9; i++) {
                if (board[i] === null) {
                    board[i] = 'O';
                    let score = minimax(board, 0, false, alpha, beta, depth);
                    board[i] = null;
                    if (score > bestScore) { bestScore = score; move = i; }
                }
            }
            return move;
        }

        function minimax(board, depth, isMaximizing, alpha, beta, depthLimit) {
            if (checkWin(board, 'O')) return 10 - depth;
            if (checkWin(board, 'X')) return depth - 10;
            if (!board.includes(null)) return 0;
            if (depth >= depthLimit) return 0;

            if (isMaximizing) {
                let bestScore = -Infinity;
                for (let i = 0; i < 9; i++) {
                    if (board[i] === null) {
                        board[i] = 'O';
                        let score = minimax(board, depth + 1, false, alpha, beta, depthLimit);
                        board[i] = null;
                        bestScore = Math.max(score, bestScore);
                        alpha = Math.max(alpha, score);
                        if (beta <= alpha) break;
                    }
                }
                return bestScore;
            } else {
                let bestScore = Infinity;
                for (let i = 0; i < 9; i++) {
                    if (board[i] === null) {
                        board[i] = 'X';
                        let score = minimax(board, depth + 1, true, alpha, beta, depthLimit);
                        board[i] = null;
                        bestScore = Math.min(score, bestScore);
                        beta = Math.min(beta, score);
                        if (beta <= alpha) break;
                    }
                }
                return bestScore;
            }
        }

        // Neural Hybrid: Combines Minimax with Pattern Disruption
        function getNeuralMove() {
            // 1. Check for immediate win/block
            const winMove = getBestMove(9);
            
            // 2. Psychological Disruption: If center is open and game is early, take it aggressively
            if (board[4] === null && board.filter(x=>x!==null).length < 3) {
                subStatus.innerText = "Pattern Detected: Aggressive Center Control";
                return 4;
            }

            // 3. Randomness injection to feel "Alive" (5% chance to deviate from perfect play)
            if (Math.random() < 0.05) {
                subStatus.innerText = "Creativity Module Engaged";
                return getRandomMove();
            }

            return winMove;
        }

        function checkWin(currentBoard, player) {
            return wins.some(combo => combo.every(i => currentBoard[i] === player));
        }

        function endGame(winner) {
            gameActive = false;
            neuralActive = false;
            if (winner === 'draw') {
                mainStatus.innerText = "DRAW";
                subStatus.innerText = "Perfect Balance";
                addLog("Result: Draw", "win");
            } else {
                if (winner === 'X') {
                    mainStatus.innerText = "YOU WON";
                    subStatus.innerText = "Impossible Outcome";
                    addLog("Result: Human Victory", "win");
                    drawWinLine(winner);
                } else {
                    mainStatus.innerText = "AI WON";
                    subStatus.innerText = "System Dominance";
                    addLog("Result: AI Victory", "lose");
                    drawWinLine(winner);
                }
            }
        }

        function drawWinLine(winner) {
            // Simplified for brevity, finds first winning combo
            const combo = wins.find(c => c.every(i => board[i] === winner));
            if (!combo) return;
            
            const cell1 = boardEl.children[combo[0] + 1];
            const cell3 = boardEl.children[combo[2] + 1];
            const boardRect = boardEl.getBoundingClientRect();
            const r1 = cell1.getBoundingClientRect();
            const r3 = cell3.getBoundingClientRect();

            const x1 = r1.left + r1.width/2 - boardRect.left;
            const y1 = r1.top + r1.height/2 - boardRect.top;
            const x2 = r3.left + r3.width/2 - boardRect.left;
            const y2 = r3.top + r3.height/2 - boardRect.top;

            const path = document.getElementById('winPath');
            path.setAttribute('d', `M ${x1} ${y1} L ${x2} ${y2}`);
            setTimeout(() => path.style.strokeDashoffset = '0', 50);
        }

        function getHint() {
            if (!gameActive || currentPlayer !== 'X') return;
            removeHint();
            // Find best move for X
            let bestScore = -Infinity;
            let bestMove = -1;
            for (let i = 0; i < 9; i++) {
                if (board[i] === null) {
                    board[i] = 'X';
                    let score = minimax(board, 0, false, -Infinity, Infinity, 5);
                    board[i] = null;
                    if (score > bestScore) { bestScore = score; bestMove = i; }
                }
            }
            if (bestMove !== -1) {
                boardEl.children[bestMove + 1].classList.add('hint');
                subStatus.innerText = `Hint: Try position ${bestMove}`;
            }
        }

        function removeHint() {
            document.querySelectorAll('.hint').forEach(el => el.classList.remove('hint'));
        }

        function resetGame() {
            board = Array(9).fill(null);
            gameActive = true;
            currentPlayer = 'X';
            mainStatus.innerText = "YOUR TURN";
            subStatus.innerText = "Game Started";
            document.getElementById('winPath').style.strokeDashoffset = '1000';
            removeHint();
            const cells = document.querySelectorAll('.cell');
            cells.forEach(cell => { cell.innerText = ''; cell.classList.remove('x', 'o'); });
        }

    </script>
</body>
</html>
